{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "migrate": "npx prisma migrate dev",
    "seed": "npx prisma db seed",
    "reset": "npx prisma migrate reset && npx tsx prisma/seed.ts",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset --force",
    "db:reset:ask": "prisma migrate reset",
    "db:reset:clean": "prisma migrate reset --force --skip-seed",
    "db:push:reset": "prisma db push --force-reset",
    "db:push:reset:seed": "prisma db push --force-reset && prisma db seed",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --ignore-pattern \"**/generated/prisma/**\"",
    "test": "jest --config jest.config.js",
    "test:unit": "jest --config jest.config.js --testPathPatterns=test-setup/tests/unit",
    "test:integration": "jest --config jest.config.js --testPathPatterns=test-setup/tests/integration --runInBand",
    "test:e2e": "jest --config jest.config.js --testPathPatterns=test-setup/tests/e2e --runInBand --no-coverage",
    "test:all": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:ci": "jest --config jest.config.js --coverage --runInBand --watchAll=false",
    "test:cov": "jest --config jest.config.js --coverage --runInBand",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config jest.config.js --runInBand",
    "test:perf": "artillery run test-setup/tests/performance/load-test.yml",
    "test:db:setup": "docker-compose -f test-setup/docker-compose.test.yml up -d postgres-test",
    "test:db:teardown": "docker-compose -f test-setup/docker-compose.test.yml down",
    "test:db:migrate": "npx prisma db push --config prisma/prisma.config.test.ts",
    "test:db:reset": "npx prisma db push --force-reset --config prisma/prisma.config.test.ts",
    "test:db:seed": "npx prisma db seed --config prisma/prisma.config.test.ts",
    "pretest": "npm run test:db:setup && sleep 5 && npm run test:db:migrate",
    "posttest": "npm run test:db:teardown"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "cache-manager": "^7.2.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.6.1",
    "firebase-admin": "^13.6.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^10.1.0",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "artillery": "^2.0.27",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-environment-node": "^30.1.2",
    "prettier": "^3.4.2",
    "prisma": "^7.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "<rootDir>/../tsconfig.jest.json"
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  }
}